package route

import (
	"{{ .ProjectNamespace }}/internal/gql"
	"github.com/graphql-go/graphql"
)

func createGraphQLSchema() (*graphql.Schema, error) {
	schemaConfig := graphql.SchemaConfig{
		Query:    gql.RootQuery,
		Mutation: nil,
	}
	schema, err := graphql.NewSchema(schemaConfig)
	if err != nil {
		return nil, err
	}
	return &schema, nil
}
